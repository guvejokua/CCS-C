#include <16f877a.h>
#fuses XT,NOWDT,NOPROTECT,NOBROWNOUT,NOLVP,NOPUT,NOWRT,NODEBUG,NOCPD
#use delay(clock=4M)
void yoldurum(int mod, int yol1pin[], int yol2pin[]);
int normalMod(int yolapin[], int yolbpin[], int yesilSureAyolu, int yesilSureByolu, int sariSureAyolu, int sariSureByolu, int yansonSureAyolu, int yansonSureByolu, int beklemeSuresi);
void main()
   {
   int a;
   set_tris_b(0x00);
   int yolapin[3] = {pin_b0, pin_b1, pin_b2};
   int yolbpin[3] = {pin_b3, pin_b4, pin_b5};
   while(1) {
   a = normalMod(yolapin, yolbpin, 100000, 80000, 1000, 1000, 350, 350, 400);
   }
   }
   
void yoldurum(int mod, int yol1pin[], int yol2pin[]) {
   int yolak = yol1pin[0];
   int yolas = yol1pin[1];
   int yolay = yol1pin[2];
   int yolbk = yol2pin[0];
   int yolbs = yol2pin[1];
   int yolby = yol2pin[2];
   if(mod == 1) {
   output_low(yolak);
   output_low(yolas);
   output_high(yolay);
   output_high(yolbk);
   output_low(yolbs);
   output_low(yolby);
   }
   else if(mod == 2) {
   output_low(yolak);
   output_low(yolas);
   output_low(yolay);
   output_high(yolbk);
   output_low(yolbs);
   output_low(yolby);
   }
   else if(mod == 3) {
   output_low(yolak);
   output_high(yolas);
   output_low(yolay);
   output_high(yolbk);
   output_low(yolbs);
   output_low(yolby);
   }
   else if(mod == 4) {
   output_high(yolak);
   output_low(yolas);
   output_low(yolay);
   output_high(yolbk);
   output_low(yolbs);
   output_low(yolby);
   }
   else if(mod == 5) {
   output_high(yolak);
   output_low(yolas);
   output_low(yolay);
   output_high(yolbk);
   output_high(yolbs);
   output_low(yolby);
   }
   else if(mod == 6) {
   output_high(yolak);
   output_low(yolas);
   output_low(yolay);
   output_low(yolbk);
   output_low(yolbs);
   output_high(yolby);
   }
}


int normalMod(int yolapin[],int yolbpin[], int yesilSureAyolu, int yesilSureByolu, int sariSureAyolu, int sariSureByolu, int yansonSureAyolu, int yansonSureByolu, int beklemeSuresi) {
   yoldurum(1, yolapin, yolbpin);
   delay_ms(yesilSureAyolu);
   yoldurum(2, yolapin, yolbpin);
   delay_ms(yansonSureAyolu);
   yoldurum(1, yolapin, yolbpin);
   delay_ms(yansonSureAyolu);
   yoldurum(2, yolapin, yolbpin);
   delay_ms(yansonSureAyolu);
   yoldurum(1, yolapin, yolbpin);
   delay_ms(yansonSureAyolu);
   yoldurum(2, yolapin, yolbpin);
   delay_ms(yansonSureAyolu);
   yoldurum(3, yolapin, yolbpin);
   delay_ms(sariSureAyolu);
   yoldurum(4, yolapin, yolbpin);
   delay_ms(beklemeSuresi);
   yoldurum(5, yolapin, yolbpin);
   delay_ms(sariSureByolu);
   yoldurum(6, yolapin, yolbpin);
   yoldurum(1, yolbpin, yolapin);         //#
   delay_ms(yesilSureByolu);
   yoldurum(2, yolbpin, yolapin);
   delay_ms(yansonSureByolu);
   yoldurum(1, yolbpin, yolapin);
   delay_ms(yansonSureByolu);
   yoldurum(2, yolbpin, yolapin);
   delay_ms(yansonSureByolu);
   yoldurum(1, yolbpin, yolapin);
   delay_ms(yansonSureByolu);
   yoldurum(2, yolbpin, yolapin);
   delay_ms(yansonSureByolu);
   yoldurum(1, yolbpin, yolapin);
   delay_ms(yansonSureByolu);
   yoldurum(2, yolbpin, yolapin);
   delay_ms(yansonSureByolu);
   yoldurum(3, yolbpin, yolapin);
   delay_ms(sariSureByolu);
   yoldurum(4, yolbpin, yolapin);
   delay_ms(beklemeSuresi);
   yoldurum(5, yolbpin, yolapin);
   delay_ms(sariSureAyolu);
   yoldurum(6, yolbpin, yolapin);
   return 1;
}
   
