#include <16F628A.h>

#FUSES NOWDT                    //No Watch Dog Timer
#FUSES NOBROWNOUT               //No brownout reset
#FUSES NOLVP                    //No low voltage prgming, B3(PIC16) or B5(PIC18) used for I/O

#use delay(crystal=16MHz)

void main()
{
   //Kurulum Kýsmý
   set_tris_b(0x00);
   output_b(0x00);
   //set_tris_b(0x00);
   
   while(1)
   {
      //Döngü
      output_high(pin_b6);
      delay_ms(50);
      output_low(pin_b6);
      delay_ms(50);
   }

}
